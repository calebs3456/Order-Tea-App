}

input[type="submit"] {
    width: 90%;
    background-color: #3399ff;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

input[type="submit"]:hover {
    background-color: #0059b3;
}

form{
    display: flex;
    flex-direction: column;
    align-items: center;
    
}

#wholeForm {
    background-color: white;
}

